pipeline {
    agent any

    parameters {
         string(name: 'tomcat_prod', defaultValue: 'ec2-63-32-91-21.eu-west-1.compute.amazonaws.com', description: 'Production Server')
    }

    triggers {
         pollSCM('* * * * *')
     }

    stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{

                stage ("Deploy to Production"){
                    steps {
                        sh "sudo scp -i /home/ubuntu/Documents/tools/Jenkins/tomcat-demo.pem -r /var/lib/jenkins/workspace/FullyAutomated/webapp/target/webapp.war ec2-user@${params.tomcat_prod}:/usr/local/apache-tomcat-7.0.90/webapps"
                    }
                }
            }
        }
    }
}
